<idea-plugin>
  <id>com.farragofiction.ideaplugin</id>
  <name>FarragoFiction Utility Plugin</name>
  <version>1.0</version>
  <vendor email="support@yourcompany.com" url="http://www.farragofiction.com">FarragoFiction</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.farragofiction.ideaplugin.wordlist.WordListFileTypeFactory"/>
    <lang.parserDefinition language="TextEngineWordList" implementationClass="com.farragofiction.ideaplugin.wordlist.WordListParserDefinition"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>